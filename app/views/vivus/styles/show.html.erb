<div id="vivus-header">
  Styleguide
</div>

<%= render partial: "nav" %>

<div id="vivus-body">
  <ul class="vivus-sections">

    <% @stylesheets.select{ |section| section.downcase.gsub(/[^a-z]+/, '-').chomp('-') == params[:section]}.each do |title, components| %>

      <li class="vivus-section">
        <h1 class="vivus-section-title"><%= title %></h1>
        <ul class="vivus-components">
          <%= render partial: "component", collection: components.uniq{|c| c.name} %>
        </ul>
      </li>
    <% end %>
  </ul>
</div>
